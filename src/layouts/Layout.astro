---
import Navbar from "../components/Navbar.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CornerBuddy from "../components/CornerBuddy.astro";

const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle} â˜… enigmalea</title>
  </head>
  <body
    class="h-screen cursor-coffee bg-base prose-a:cursor-coffee prose-a:hover:cursor-coffee_select"
  >
    <Navbar />
    <Header />
    <main
      class="prose mx-auto w-[95vw] px-3 pb-14 prose-headings:font-mono md:max-w-[800px]"
    >
      <slot />
    </main>
    <CornerBuddy />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  a:any-link {
    cursor: url('/images/coffee.cur'), url('/images/coffee.png'), auto !important;
  }

  a:hover {
    cursor: url('/images/coffee_select.cur'), url('/images/coffee_select.png'), auto !important;
  }
</style>
