---
import "@fontsource/unica-one";
import "@fontsource/atkinson-hyperlegible";
import "@fontsource/monaspace-neon";
import BlogNavbar from "../components/blog/BlogNavbar.astro";
import Header from "../components/Header.astro";
import BlogFooter from "../components/blog/BlogFooter.astro";
import CornerBuddy from "../components/CornerBuddy.astro";
import Sidebar from "../components/blog/Sidebar.astro";

const { pageTitle, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Canonical URL -->
    <link rel="canonical" href={Astro.url.toString()} />

    <!-- MetaData -->
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#a6da95" />
    <meta name="author" content="enigmalea" />
    <meta
      name="title"
      content={pageTitle ? `${pageTitle} ★ enigmalea` : "enigmalea"}
    />
    <meta name="description" content={description ? `${description}` : ""} />

    <!-- OG Tags -->
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content={pageTitle ? `${pageTitle} ★ enigmalea` : "enigmalea"}
    />
    <meta property="og:url" content={Astro.url.toString()} />
    <meta
      property="og:description"
      content={description ? `${description}` : ""}
    />
    <meta property="og:site_name" content="enigmalea" />
    <meta
      property="og:image"
      content={new URL("/assets/img/enigmalea.png", Astro.site)}
    />
    <meta
      property="og:image:secure_url"
      content={new URL("/assets/img/enigmalea.png", Astro.site)}
    />
    <meta property="og:image:type" content="image/png" />

    <!-- Twitter Tags -->
    <meta property="twitter:domain" content="https://enigmalea.quest" />
    <meta property="twitter:url" content={Astro.url.toString()} />
    <meta
      name="twitter:title"
      content={pageTitle ? `${pageTitle} ★ enigmalea` : "enigmalea"}
    />
    <meta
      name="twitter:description"
      content={description ? `${description}` : ""}
    />

    <!-- Title -->
    <title>{pageTitle ? `${pageTitle} ★ enigmalea` : "enigmalea"}</title>
  </head>
  <body
    class="cursor-coffee bg-base prose-a:cursor-coffee prose-a:hover:cursor-coffee_select"
  >
    <BlogNavbar />
    <Header />
    <CornerBuddy />
    <div class="flex justify-center">
      <div
        class="prose m-0 grid max-w-none grid-flow-row justify-start gap-0 p-0 min-[860px]:grid-flow-col"
      >
        <Sidebar />
        <main
          class="!min-[860px]:order-last order-first mx-auto px-3 pb-14 prose-headings:font-mono min-[860px]:place-self-start"
        >
          <slot />
        </main>
      </div>
    </div>
    <BlogFooter />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  a:any-link {
    cursor: url("/images/coffee.cur"), url("/images/coffee.png"), auto !important;
  }

  a:hover {
    cursor: url("/images/coffee_select.cur"), url("/images/coffee_select.png"),
      auto !important;
  }
</style>
